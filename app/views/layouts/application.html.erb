<!doctype html>
<html>
<head>
	<title>My Little Webapp: Coding Is Magic</title>
	<meta charset='UTF-8' />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
	<h1>My Rails Girls Diary</h1>
	<div>
    <% for entry in @entries %>
    <h2><%= entry.title %></h2>
      <p><%= entry.date %></p>
      <p><%= entry.contents %></p>
    <% end %>
	</div>
	<div>
		<h1>My favourite websites</h1>
		<ul>
      <% for url, name in @websites %>
        <li><a href="<%= url %>"><%= name %></a></li>
      <% end %>
		</ul>
	</div>
	<img src='http://railsgirls.com/images/rg-warsaw.png' />

	<form action='/'>
		<p><input name='title' type='text' placeholder='Title'></p>
		<p><textarea name='title' placeholder='Content'></textarea></p>

		<p><input type="submit" value="Create"></p>
	</form>
	<p><a href='#'>Back</a></p>
</body>
</html>
